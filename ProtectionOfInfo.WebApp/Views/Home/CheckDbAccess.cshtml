@model string
@{
    ViewData["Title"] = "Расшифрование базы данных";
}

<div class="container col-6 align-items-center mt-5">
    <h1 class="text-center">Расшифрование базы данных</h1>
    <form method="post" asp-controller="Home" asp-action="CheckDbAccess">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label for="Password">Пароль для расшифрования базы учетных записей</label>
            <input  type="password" class="form-control" id="Password" name="Password" placeholder="Пароль">
        </div>
        <button type="submit" class="btn btn-primary">Ввести</button>
    </form>
</div>