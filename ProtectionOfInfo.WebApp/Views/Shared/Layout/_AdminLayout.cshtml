<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-reboot.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/chat.css" />
</head>
<body>
    <header>
        <partial name="_NavBarPartial" />
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @switch (ViewBag.NavBar)
            {
                case 1:
                    break;
                case 2:
                    <div class="row align-items-start mt-5 mb-5">
                        <partial name="_NavAdminPartial" />
                        <partial name="_NavPortsPartial" />
                    </div>
                    <div class="row align-items-start mt-5 mb-5">
                        <partial name="_NavDirectoryPartial" />
                        <div class="col-6 align-items-center">
                            <partial name="_NavChatParial" />
                            <partial name="_NavTelegramBotPartial" />
                        </div>
                    </div>
                    break;
                default:
                    break;
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021-2022 - WebApp
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/microsoft-signalr/signalr.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/chat.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>